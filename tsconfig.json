{
  "compilerOptions": {
    "lib": ["DOM", "ES6"],
    "allowJs": true,
    "target": "ESNext",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "./dist/esm",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "declarationDir": "./dist/types",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "include": [
    "./src"
  ],
}
